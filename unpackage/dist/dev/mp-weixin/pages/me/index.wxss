page {
  background-color: #f4f4f4;
}
.head {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.head image {
  height: 70px;
  margin: 10px 0 10px 20px;
}
#nickname {
  margin: 15px 0 0 10px;
  font-size: 20px;
}
#phone {
  margin-top: 50px;
  margin-left: -100px;
}
.viewport {
  padding: 20rpx;
}
/* 列表 */
.list {
  margin: 0 10px;
  padding: 0 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
}
.list .item {
  line-height: 90rpx;
  padding-left: 10rpx;
  font-size: 30rpx;
  color: #333;
  border-top: 1rpx solid #ddd;
  position: relative;
  text-align: left;
  -webkit-border-radius: 0;
          border-radius: 0;
  background-color: #fff;
}
.list .item::after {
  width: auto;
  height: auto;
  left: auto;
  border: none;
}
.list .item:first-child {
  border: none;
}
.list .item::after {
  content: '';
  right: 5rpx;
}
.list .arrow::after {
  content: '>';
  position: absolute;
  top: 50%;
  color: #ccc;
  font-family: 'erabbit' !important;
  font-size: 32rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
/* 操作按钮 */
.action {
  text-align: center;
  line-height: 90rpx;
  margin: 40rpx 10px 0;
  font-size: 32rpx;
  color: #333;
}
.action .button {
  background-color: #fff;
  margin-bottom: 20rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
}
.orders {
  position: relative;
  z-index: 99;
  padding: 30rpx;
  margin: 50rpx 25rpx 20rpx;
  background-color: #fff;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  -webkit-box-shadow: 0 4rpx 6rpx rgba(240, 240, 240, 0.6);
          box-shadow: 0 4rpx 6rpx rgba(240, 240, 240, 0.6);
}
.orders .title {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #1e1e1e;
}
.orders .title .navigator {
  font-size: 24rpx;
  color: #939393;
  float: right;
}
.orders .section {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding-top: 20rpx;
}
.orders .section .vertical-layout {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  font-size: 24rpx;
}
.orders .section .vertical-layout image {
  height: 30px;
}

