<view class="viewport"><view class="avatar"><view class="avatar-content"><image class="image" src="{{userInfo.headUrl}}" mode="aspectFill" data-event-opts="{{[['tap',[['openChooseAvatar',['$event']]]]]}}" bindtap="__e"></image><text data-event-opts="{{[['tap',[['openChooseAvatar',['$event']]]]]}}" class="text" bindtap="__e">点击修改头像</text></view></view><view class="form"><view class="form-content"><view class="form-item"><text class="label">账号</text><text class="account">{{userInfo.username}}</text></view><view class="form-item"><text class="label">昵称</text><input class="input" type="text" placeholder="请填写昵称" data-event-opts="{{[['input',[['__set_model',['$0','nickname','$event',[]],['userInfo']]]]]}}" value="{{userInfo.nickname}}" bindinput="__e"/></view><view class="form-item"><text class="label">姓名</text><input class="input" type="text" placeholder="请填写姓名" data-event-opts="{{[['input',[['__set_model',['$0','name','$event',[]],['userInfo']]]]]}}" value="{{userInfo.name}}" bindinput="__e"/></view><view class="form-item"><text class="label">手机</text><input class="input" type="text" placeholder="请填写手机" data-event-opts="{{[['input',[['__set_model',['$0','phone','$event',[]],['userInfo']]]]]}}" value="{{userInfo.phone}}" bindinput="__e"/></view><view class="form-item"><text class="label">邮箱</text><input class="input" type="text" placeholder="请填写邮箱" data-event-opts="{{[['input',[['__set_model',['$0','email','$event',[]],['userInfo']]]]]}}" value="{{userInfo.email}}" bindinput="__e"/></view><view class="form-item"><text class="label">身份证</text><input class="input" type="text" placeholder="请填写身份证" data-event-opts="{{[['input',[['__set_model',['$0','idCard','$event',[]],['userInfo']]]]]}}" value="{{userInfo.idCard}}" bindinput="__e"/></view></view><button data-event-opts="{{[['tap',[['updateUser',['$event']]]]]}}" class="form-button" bindtap="__e">保 存</button></view></view>